{
  "name": "@hywax/vitepress-yandex-metrika",
  "type": "module",
  "version": "0.3.1",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/hywax/vitepress-yandex-metrika.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/vitepress-yandex-metrika.js",
      "require": "./dist/vitepress-yandex-metrika.cjs"
    }
  },
  "main": "./dist/vitepress-yandex-metrika.cjs",
  "module": "./dist/vitepress-yandex-metrika.js",
  "types": "./dist/vitepress-yandex-metrika.d.ts",
  "files": [
    "!dist/cover.jpg",
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "release": "pnpm test && pnpm build && changelogen --release && pnpm publish && git push --follow-tags",
    "lint": "eslint . --fix",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "vite": "^4.0.0 || ^5.0.0",
    "vitepress": "1.0.0-rc.36"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.3",
    "@commitlint/cli": "^18.5.0",
    "@commitlint/config-conventional": "^18.5.0",
    "@types/node": "^20.11.2",
    "@vitest/coverage-v8": "^1.2.0",
    "camelcase": "^8.0.0",
    "changelogen": "^0.5.5",
    "eslint": "^8.56.0",
    "husky": "^9.0.6",
    "lint-staged": "^15.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-dts": "^3.7.1",
    "vitest": "^1.2.1"
  },
  "lint-staged": {
    "*.ts": "pnpm run lint"
  }
}